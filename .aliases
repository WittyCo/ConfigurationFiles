#!/bin/zsh
# enable color support of ls and also add handy aliases
if [ -x /usr/bin/dircolors ]; then
    test -r $XDG_CONFIG_HOME/.dircolors && eval "$(dircolors -b $XDG_CONFIG_HOME/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls --color=auto'
    alias dir='dir --color=auto'
    alias vdir='vdir --color=auto'

    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi
alias sudo='sudo '
alias wget='wget --hsts-file $XDG_CONFIG_HOME/.wget-hsts'
alias vi='nvim'
alias l='ls -l'
alias ll='ls -lF'
alias lls='ls -lahFtr'
alias lla='ls -laF'
alias la='ls -A'
alias lc='ls -CF'
alias cp='cp -iv'
alias mv='mv -iv'
# alias rm='rm -iv'
alias cls='clear'
alias zshconfig='vi $ZDOTDIR/.zshrc'
alias shutdown='sudo shutdown now'
alias restart='sudo reboot'
alias d='dirs -v'
alias gs='git status'
alias ga='git add'
alias gp='git push'
alias gpo='git push origin'
alias gtd='git tag --delete'
alias gtdr='git tag --delete origin'
alias gr='git branch -r'
alias gplo='git pull origin'
alias gb='git branch '
alias gc='git commit'
alias gd='git diff'
alias gco='git checkout '
alias gl='git log'
alias gr='git remote'
alias grs='git remote show'
alias grv='git remote -v'
alias glo='git log --pretty="oneline"'
alias glog='git log --graph --oneline --decorate'
alias gmv='git mv'
alias tc='tmux attach -t'
alias tkill='pkill -f tmux'
alias tl='tmux ls'
alias tn='tmux new -s'
alias treload='tmux source-file $XDG_CONFIG_HOME/Dotfiles/tmux/.tmux.conf'
function mkcd() {
    mkdir -p "$1" && cd "$1" || return $?
}
alias mv='/usr/local/bin/advmv -g'
alias cp='/usr/local/bin/advcp -g'
